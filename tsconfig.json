{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist-routes",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "routes/**/*",
    "utils/**/*",
    "server.js"
  ]
}
